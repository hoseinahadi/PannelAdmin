@model DomainModel.DTO.Category.CategoryAddOrEditModel

@{
    var result = ViewBag.category;
}

<div class="row">
    <div class="col-md-4">
        <form id="UpdateForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="CategoryId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                <input asp-for="CategoryDescription" class="form-control" />
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <select asp-for="ParentId" asp-items="@result" placeholder="select product" class="form-control w-150 dropdown">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <span class="btn btn-success" id="UpdateFormBtn"> آپدیت </span>
            </div>
        </form>
    </div>
</div>


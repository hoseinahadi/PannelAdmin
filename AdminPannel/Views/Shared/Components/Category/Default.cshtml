@model IEnumerable<DomainModel.Models.Category>



<div class="topTableBtn">
    <div id="AddBtn" class="btn btn-success">
        افزودن
    </div>
    <div id="FilterBtn" class="btn btn-success">
        فیلتر ها
    </div>
    <div id="SortedBtn" class="btn btn-success">
        مرتب سازی
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lineage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Depth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lineage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Depth)
            </td>
            <td>
                    <span id="Delete" data="@item.CategoryId" class="btn btn-danger"> حذف </span>
                    <span id="Update" data="@item.CategoryId" class="btn btn-success"> ویرایش </span>
                    <span id="Details" data="@item.CategoryId" class="btn btn-group"> جزئیات </span>
            </td>
        </tr>
}
    </tbody>
</table>

                
            
<div id="modal" class="modal" tabindex="-1">
    <div class="modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <span id="BtnCloseModal" class="btn-close"></span>
            </div>
            <div id="modal-body" class="modal-body ">
            </div>
        </div>
    </div>
</div>

<div id="modal2" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span id="BtnCloseModal2" class="btn-close"></span>
            </div>
            <div id="modal-body2" class="modal-body">
            </div>
        </div>
    </div>
</div>